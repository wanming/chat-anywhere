<!DOCTYPE html>
<html lang="en">
<head>
  <% include partial/header.ejs %>

  <script>
  $(function () { 

    $.material.init(); 

    var roomName = encodeURIComponent(location.href.split('#')[0]);
    var userName = $.cookie('caw-user-name');

    if (!userName) { login(); }

    var socket = io();

    socket.emit('init', { room: roomName, userName: userName });

    socket.on('chat-message', function (msg) {

      appendNewMsg(msg);
    });

    $input = $('#msg-input');
    $userNameSpan = $("#userNameSpan").text(userName);
    $msgList = $('#msg-list');
    $("#changeNameBtn").click(function () { login(); })
    $input.focus();

    $('#msg-input-form').submit(function(){
      var value = $input.val().trim();
      if (!value) { return; }
      socket.emit('chat-message', { msg: value });
      $input.val('');
      return false;
    });

    var msgItemTpl = $("#msg-item-tpl").html();

    function appendNewMsg (data) {

      $msgList.append(_.template(msgItemTpl, data));
    }

    function login() {

      location.href = 'login?' + roomName;
    }

  });
  </script>
</head>
<body class="container">
  <div class="well page">

    <div id="msg-list" class="row">

    </div>

    <form id="msg-input-form" autocomplete="off">
      <input type="text" id="msg-input" class="form-control empty" placeholder="what do you want to say?" />
      <button type="submit" class="btn btn-primary">SEND</button>
      <span class="mute col-md-offset-1">
        Your name is <span id="userNameSpan"></span>,&nbsp;
        <a id="changeNameBtn" href="javascript:void(0);">change name</a></span>
    </form>
  </div>

  <script type="text/template" id="msg-item-tpl">
    <div class="col-md-8 msg-item">
      <div class="user-name">{{ user.name }}</div>
      <div class="msg-content">{{ msg.content }}</div>
    </div>
  </script>
</body>
</html>